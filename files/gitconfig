[core]
	excludesfile = ~/.config/git/ignore
	pager = less -F

[user]
	name = Andrew Metcalf
	email = andrew@stripe.com

[github]
	user = metcalf

[alias]
	st = status
	co = checkout
	l = log --graph --abbrev-commit --decorate=short --format=format:'%C(bold blue)%h%C(reset)%C(bold magenta)%d%C(reset) %C(white)%s%C(reset) %C(dim white)%an%C(reset)'
	ld = log --graph --abbrev-commit --decorate=short --date=relative --format=format:'%C(bold blue)%h%C(reset) %C(bold green)%ar%C(reset)%C(bold magenta)%d%C(reset) %C(white)%s%C(reset) %C(dim white)%an%C(reset)'
	ll = log --graph --decorate=short
	m = merge
	g = grep --break --heading --line-number
	rbom = !git fetch origin master && git rebase origin/master
	cobm = !git fetch origin master && git checkout -b "$1" && git reset --keep origin/master && git push --set-upstream origin "$1" && :

[url "git@github.com:"]
	insteadOf = https://github.com/

[color]
	ui = auto
	pager = true

[color "diff"]
	meta = yellow dim
	frag = magenta
	old = red
	new = green

[color "status"]
	added = green
	changed = yellow
	untracked = cyan

[merge]
	tool = meld
[mergetool]
	keepBackup = false

[push]
	default = simple

[branch]
	autosetupmerge = true

[branch "master"]
	mergeoptions = --ff-only

[rerere]
	enabled = true

[rebase]
	autosquash = true

[grep]
	lineNumber = true
	patternType = perl
